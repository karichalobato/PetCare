<resources>

    <!-- Base vaccineApplication theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/color1</item>
        <item name="android:layout_gravity">center</item>

    </style>


    <style name="CustomTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/material_gray_600</item>
        <item name="colorPrimaryDark">@color/material_grey_700</item>
        <item name="colorAccent">@color/material_pink_a700</item>
        <item name="colorControlNormal">@color/material_grey_500</item>
        <item name="colorControlActivated">@color/material_blue_a800</item>
        <item name="colorControlHighlight">@color/material_blue_a200</item>
        <item name="android:windowBackground">@color/material_blue_50</item>
        <item name="colorButtonNormal">@color/material_pink_500</item>
    </style>

    <style name="MyButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimaryLight</item>
    </style>

</resources>
