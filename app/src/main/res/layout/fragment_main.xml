<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color6"
                tools:context="com.cuidadoanimal.petcare.gui.fragments.Main">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_47sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"

        >


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pets"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_290sdp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:background="@color/color5"/>


        </LinearLayout>


    </ScrollView>

    <TextView
            android:text="Your pets"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/_149sdp"
            android:id="@+id/textView"
            android:layout_marginTop="@dimen/_37sdp"
            android:gravity="center"
            android:textColor="@color/color4"
            android:autoText="false"
            app:autoSizeTextType="uniform" android:layout_marginRight="199dp"/>

    <Button
            android:id="@+id/butnew"
            android:text="New Pet"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="77dp"
            android:backgroundTint="#85c1e9"
            android:textColor="@color/colorPrimary" android:layout_marginRight="60dp"/>


</RelativeLayout>