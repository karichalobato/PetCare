<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="com.cuidadoanimal.petcare.login">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="47dp"

            android:layout_alignParentStart="true" android:layout_marginStart="0dp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
        >


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pets"
                    android:layout_width="match_parent"
                    android:layout_height="333dp"/>


        </LinearLayout>


    </ScrollView>

    <TextView
            android:text="Your pets"
            android:layout_width="172dp"
            android:layout_height="84dp" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="213dp"
            android:id="@+id/textView" android:layout_marginTop="118dp" android:layout_marginRight="213dp"
            android:gravity="center"

            android:autoText="false" app:autoSizeTextType="uniform"/>
    <Button
            android:text="New"
            android:layout_width="142dp"
            android:layout_height="115dp" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="21dp"
            android:id="@+id/butnew" android:layout_marginTop="91dp" android:layout_marginRight="21dp"


            android:textColor="#FFFFFF"/>

</RelativeLayout>