<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/colorAccent"
                                                   android:layout_height="match_parent"
                                                   tools:context="com.cuidadoanimal.petcare.gui.activities.WebViewActivity">

    <ImageView
            android:src="@drawable/article"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <TextView
            android:text="Articles"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/textView"
            android:gravity="center"
            android:textColor="@color/color11"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button

            android:id="@+id/alimentacion"
            android:background="@drawable/bones"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="@dimen/_5sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_width="@dimen/_80sdp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginBottom="200dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/limpieza"
            android:background="@drawable/bath"
            android:padding="@dimen/_5sdp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_height="@dimen/_80sdp"
            android:layout_width="@dimen/_80sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.909" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/recreacion" android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/recreacion"
            android:background="@drawable/walking"
            android:layout_row="0"
            android:layout_column="2"
            android:padding="@dimen/_5sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_width="@dimen/_80sdp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/cuidado"
            android:background="@drawable/grooming"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="@dimen/_5sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_width="@dimen/_80sdp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/alimentacion" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@+id/limpieza" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:id="@+id/medico"
            android:background="@drawable/checkup"
            android:padding="@dimen/_5sdp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_height="@dimen/_80sdp"
            android:layout_width="@dimen/_80sdp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09" app:layout_constraintStart_toEndOf="@+id/alimentacion"
            android:layout_marginStart="8dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/limpieza" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:id="@+id/atencion"
            android:background="@drawable/dog"
            android:layout_row="2"
            android:layout_column="3"
            android:padding="@dimen/_5sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_width="@dimen/_80sdp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@+id/medico" android:layout_marginStart="8dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/recreacion" app:layout_constraintHorizontal_bias="0.428"/>

</androidx.constraintlayout.widget.ConstraintLayout>