<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/color1"
                                                   android:orientation="vertical"
                                                   tools:context="com.cuidadoanimal.petcare.gui.activities.WebViewActivity">


    <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Articles"
            android:textColor="@color/colorPrimaryDark"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/iv_resource"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentStart="true"
            android:contentDescription="TODO"
            android:src="@drawable/article"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <Button

            android:id="@+id/alimentacion"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="232dp"
            android:background="@drawable/bones"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/limpieza"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_72sdp"
            android:background="@drawable/bath"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/recreacion"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/recreacion"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_72sdp"
            android:background="@drawable/walking"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/cuidado"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="@dimen/_28sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/grooming"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/limpieza"
            app:layout_constraintTop_toBottomOf="@+id/alimentacion"
            app:layout_constraintVertical_bias="0.086"/>

    <Button
            android:id="@+id/medico"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/checkup"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toTopOf="@+id/limpieza"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toEndOf="@+id/alimentacion"
            app:layout_constraintTop_toBottomOf="@+id/iv_resource"
            app:layout_constraintVertical_bias="0.949"/>

    <Button
            android:id="@+id/atencion"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@drawable/dog"
            android:padding="@dimen/_5sdp"
            app:layout_constraintBottom_toTopOf="@+id/recreacion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/medico"/>

</androidx.constraintlayout.widget.ConstraintLayout>