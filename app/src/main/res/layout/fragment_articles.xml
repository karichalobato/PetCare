<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="match_parent"
                tools:context="com.cuidadoanimal.petcare.gui.activities.WebViewActivity">


    <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:columnCount="3"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="315dp"
            android:layout_marginStart="0dp"
            android:layout_marginRight="0dp">

        <Button

                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/pic1"
                android:background="@drawable/bones"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="@dimen/_2sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_width="@dimen/_100sdp"/>

        <Button
                android:id="@+id/pic2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/bath"
                android:padding="@dimen/_2sdp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_height="@dimen/_100sdp"
                android:layout_width="@dimen/_100sdp"/>

        <Button
                android:id="@+id/pic3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/walking"
                android:layout_row="0"
                android:layout_column="2"
                android:padding="@dimen/_2sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_width="@dimen/_100sdp"/>

        <Button
                android:id="@+id/pic4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/grooming"
                android:layout_row="1"
                android:layout_column="0"
                android:padding="@dimen/_2sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_width="@dimen/_100sdp"/>

        <Button
                android:id="@+id/pic5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/checkup"
                android:padding="@dimen/_2sdp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_height="@dimen/_100sdp"
                android:layout_width="@dimen/_100sdp"/>

        <Button
                android:id="@+id/pic6"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/dog"
                android:layout_row="1"
                android:layout_column="2"
                android:padding="@dimen/_2sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_width="@dimen/_100sdp"/>
    </GridLayout>


    <ImageView
            android:src="@drawable/article"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="91dp"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView"
            android:layout_marginTop="115dp"/>

    <TextView
            android:text="Articles"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="137dp"
            android:id="@+id/textView"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:textColor="@color/color11"
            android:autoText="false"
            app:autoSizeTextType="uniform" android:layout_marginRight="137dp"/>

</RelativeLayout>