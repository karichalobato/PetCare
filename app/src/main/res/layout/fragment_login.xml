<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/witching_background"
        android:layout_gravity="center"
        tools:context=".gui.activities.MainActivity">

    <ImageView
            android:layout_width="@dimen/_350sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/family"/>

    <Button
            android:id="@+id/welcome"
            android:text="Welcome"
            android:enabled="true"
            android:layout_width="@dimen/_206sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@android:color/white"
            android:theme="@style/MyButton"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteY="@dimen/_203sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_marginBottom="@dimen/_203sdp"
            android:background="#F97CC8"/>

    <Button
            android:id="@+id/btn_sign_out"
            android:text="SIGNOUT"
            android:enabled="true"
            android:layout_width="@dimen/_206sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@android:color/white"
            android:theme="@style/MyButton"
            android:layout_alignParentStart="true"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="@dimen/_391sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_marginBottom="@dimen/_160sdp"
            android:background="#D22D92"/>

</RelativeLayout>