<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sound_cloud_background"
                tools:context="com.cuidadoanimal.petcare.gui.fragments.NewPet">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-3dp"
            android:layout_marginBottom="@dimen/_230sdp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:orientation="vertical">

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4"/>
            <TextView
                    android:text="TextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView5"/>
            <TextView
                    android:text="TextView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView6"/>



            <Button
                    android:id="@+id/btnvacine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#85c1e9"
                    android:text="@string/vacine"
                    android:textColor="@android:color/white"/>


        </LinearLayout>


    </ScrollView>
    <ImageView
            android:src="@drawable/cat"
            android:layout_width="170dp"
            android:layout_height="155dp" android:layout_alignParentStart="true"
            android:layout_marginStart="111dp" android:layout_alignParentTop="true" android:id="@+id/imageView"
            android:layout_marginTop="71dp"/>

</RelativeLayout>