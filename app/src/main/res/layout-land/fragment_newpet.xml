<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                tools:context="com.cuidadoanimal.petcare.gui.fragments.NewPet">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_3sdp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp">

            <AutoCompleteTextView
                    android:id="@+id/PetName"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="@string/pet_name"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colortexto"
                    android:textSize="@dimen/_20sdp"/>

            <AutoCompleteTextView
                    android:id="@+id/PetBreed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="Breed"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colortexto"
                    android:textSize="@dimen/_15sdp"/>

            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                <RadioGroup
                        android:id="@+id/rg_pet_sex"
                        android:layout_width="wrap_content"
                        android:checkedButton="@id/rb_sex_female"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <RadioButton
                            android:id="@+id/rb_sex_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colortexto"
                            android:text="@string/female"/>

                    <RadioButton
                            android:id="@+id/rb_sex_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colortexto"
                            android:text="@string/male"/>
                </RadioGroup>
            </RadioGroup>

            <Button
                    android:id="@+id/btncreatePet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/create_pet"
                    android:background="#85c1e9"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colortexto"/>

        </LinearLayout>

    </ScrollView>

    <ImageView
            android:src="@drawable/registration"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_220sdp"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView"
            android:layout_marginTop="@dimen/_20sdp"/>

</RelativeLayout>