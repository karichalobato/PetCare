<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                tools:context="com.cuidadoanimal.petcare.gui.fragments.Main">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_43sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_184sdp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
        >


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pets"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_272sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:background="@color/color5"/>


        </LinearLayout>


    </ScrollView>

    <ImageView
            android:src="@drawable/vaccine"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="66dp"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView"
            android:layout_marginTop="174dp"/>

    <Button
            android:id="@+id/butnew"
            android:text="New Pet"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginEnd="534dp"
            android:background="#85c1e9"
            android:textColor="@color/colortexto" android:layout_marginLeft="35dp" android:layout_marginRight="534dp"/>

</RelativeLayout>