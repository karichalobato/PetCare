<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    android:paddingHorizontal="@dimen/_35sdp"
    android:paddingTop="@dimen/_39sdp"
    android:paddingBottom="@dimen/_50sdp"
    tools:context="com.cuidadoanimal.petcare.gui.fragments.NewVaccine">

    <TextView
        android:id="@+id/tv_vaccine_for_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/vaccine_for_pet"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_20sdp" />

    <ImageView
        android:id="@+id/iv_resource"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/tv_vaccine_for_pet_name"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:contentDescription="@string/imagen"
        android:src="@drawable/registration" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/VaccineName"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_vaccine_for_pet_name"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_toEndOf="@+id/iv_resource"
        android:hint="@string/vaccine_name" />

    <TextView
        android:id="@+id/selectDate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/VaccineName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:drawableStart="@drawable/ic_calendar_black_24dp"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center"
        android:hint="Select Date"
        android:paddingStart="@dimen/_10sdp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/color4"
        android:textSize="@dimen/_15sdp" />


    <Button
        android:id="@+id/bt_new_vaccine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectDate"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/colorPrimaryDark"
        android:shadowRadius="@android:integer/config_shortAnimTime"
        android:text="@string/create_vaccine"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/color0" />

</RelativeLayout>