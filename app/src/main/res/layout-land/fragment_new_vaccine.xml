<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context="com.cuidadoanimal.petcare.gui.fragments.NewPet">

    <TextView
        android:id="@+id/tv_vaccine_for_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:text="@string/vaccine_for_pet"
        android:textColor="@color/color4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_15sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:orientation="vertical">

            <AutoCompleteTextView
                android:id="@+id/VaccineName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:drawablePadding="10dp"
                android:hint="@string/vaccine_name"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/color4"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/selectDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Select Date"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/color4"
                android:textSize="@dimen/_15sdp" />

            <Button
                android:id="@+id/bt_new_vaccine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#85c1e9"
                android:text="@string/create_vaccine"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/iv_resource"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_220sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:contentDescription="TODO"
        android:src="@drawable/registration" />

</RelativeLayout>