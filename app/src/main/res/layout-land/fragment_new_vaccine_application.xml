<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                tools:context="com.cuidadoanimal.petcare.gui.fragments.NewVaccineApplication">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-3dp"
            android:layout_marginBottom="@dimen/_130sdp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/selectDate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="Select Date"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/color4"
                    android:textSize="@dimen/_15sdp"/>


            <Button
                    android:id="@+id/bt_create_application"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#85c1e9"
                    android:text="@string/create_vaccine"
                    android:textColor="@color/colorPrimary"/>

        </LinearLayout>
    </ScrollView>

    <TextView
            android:id="@+id/tv_aplication_for_vaccine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/application_for_vaccine"
            android:textColor="@color/color4"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_40sdp"/>


</RelativeLayout>